<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
  package="com.nloops.students">

  <application
    android:allowBackup="true"
    android:icon="@mipmap/ic_launcher"
    android:label="@string/app_name"
    android:name=".StudentsApp"
    android:roundIcon="@mipmap/ic_launcher_round"
    android:supportsRtl="true"
    android:theme="@style/AppTheme">
    <activity android:name=".subjects.SubjectActivity">
      <intent-filter>
        <action android:name="android.intent.action.MAIN"/>

        <category android:name="android.intent.category.LAUNCHER"/>
      </intent-filter>
    </activity>
    <activity android:name=".subjects.SubjectAddEdit"/>
    <activity android:name=".classesdata.ClassesActivity">
      <meta-data
        android:name="android.support.PARENT_ACTIVITY"
        android:value=".subjects.SubjectActivity"/>
    </activity>
    <activity android:name=".classesdata.ClassAddEdit">
    </activity>
    <activity android:name=".students.StudentEditActivity">
    </activity>
    <activity android:name=".students.StudentActivity">
    </activity>
    <activity android:name=".attendance.AttendanceActivity">
    </activity>
    <activity android:name=".reports.ClassReports">
      <meta-data
        android:name="android.support.PARENT_ACTIVITY"
        android:value=".subjects.SubjectActivity"
        />
    </activity>
  </application>

</manifest>