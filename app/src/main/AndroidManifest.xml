<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
  package="com.nloops.students">

  <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
  <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
  <uses-permission android:name="android.permission.INTERNET"/>
  <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED"/>

  <application
    android:allowBackup="true"
    android:icon="@mipmap/ic_launcher"
    android:label="@string/app_name"
    android:name=".StudentsApp"
    android:roundIcon="@mipmap/ic_launcher_round"
    android:supportsRtl="true"
    android:theme="@style/AppTheme">
    <activity android:name=".subjects.SubjectActivity">
      <intent-filter>
        <action android:name="android.intent.action.MAIN"/>

        <category android:name="android.intent.category.LAUNCHER"/>
      </intent-filter>
    </activity>

    <activity android:name=".subjects.SubjectAddEdit"/>

    <activity android:name=".classesdata.ClassesActivity">
      <meta-data
        android:name="android.support.PARENT_ACTIVITY"
        android:value=".subjects.SubjectActivity"/>
    </activity>

    <activity android:name=".classesdata.ClassAddEdit"/>

    <activity android:name=".students.StudentEditActivity"/>

    <activity android:name=".students.StudentActivity"/>

    <activity android:name=".attendance.AttendanceActivity"/>

    <activity android:name=".reports.ClassReports">
      <meta-data
        android:name="android.support.PARENT_ACTIVITY"
        android:value=".subjects.SubjectActivity"/>
    </activity>

    <activity android:name=".reports.StudentsReports">
      <meta-data
        android:name="android.support.PARENT_ACTIVITY"
        android:value=".reports.ClassReports"/>
    </activity>

    <receiver
      android:name=".reminder.AlarmReceiver"
      android:enabled="false">
      <intent-filter>
        <action android:name="android.intent.action.BOOT_COMPLETED"/>
      </intent-filter>
    </receiver>
  </application>

</manifest>