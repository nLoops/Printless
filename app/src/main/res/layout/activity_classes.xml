<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:id="@+id/classes_layout_container"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context=".subjects.SubjectActivity">

  <include
    android:id="@+id/toolbar_holder"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    layout="@layout/general_toolbar_layout"/>

  <android.support.v7.widget.RecyclerView
    android:id="@+id/rv_classes_activity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="?android:attr/actionBarSize"
    />

  <include
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    layout="@layout/empty_state_layout"
    android:layout_gravity="center"
    />

  <android.support.design.widget.FloatingActionButton
    android:id="@+id/classes_fab"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dimen_sixteen_dp"
    android:layout_gravity="bottom|end"
    android:elevation="@dimen/dimen_two_dp"
    android:src="@drawable/ic_add_new"
    app:fabSize="normal"
    />

</android.support.design.widget.CoordinatorLayout>