<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:padding="@dimen/dimen_five_dp"
  tools:context=".attendance.AttendanceActivity">

  <TextView
    android:id="@+id/tv_att_date_today"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:text="Monday 27-9"
    android:layout_marginTop="@dimen/dimen_sixteen_dp"
    android:layout_marginStart="@dimen/dimen_five_dp"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    android:textSize="@dimen/text_body_size"
    />
  <android.support.v7.widget.CardView
    android:id="@+id/calendar_holder"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dimen_five_dp"
    app:cardCornerRadius="@dimen/dimen_five_dp"
    app:layout_constraintLeft_toLeftOf="@id/tv_att_date_today"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toBottomOf="@id/tv_att_date_today"
    >
    <com.prolificinteractive.materialcalendarview.MaterialCalendarView
      android:id="@+id/cv_attendance"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      app:mcv_tileHeight="40dp"
      app:mcv_showOtherDates="all"
      android:background="#e4e4e4"
      />
  </android.support.v7.widget.CardView>

  <android.support.v7.widget.RecyclerView
    android:id="@+id/attendance_rv"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    app:layout_constraintLeft_toLeftOf="@id/calendar_holder"
    app:layout_constraintRight_toRightOf="@id/calendar_holder"
    app:layout_constraintTop_toBottomOf="@id/calendar_holder"
    app:layout_constraintBottom_toTopOf="@id/attendance_finish_bt"
    />

  <Button
    android:id="@+id/attendance_finish_bt"
    android:layout_width="280dp"
    android:layout_height="wrap_content"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintLeft_toRightOf="parent"
    app:layout_constraintRight_toLeftOf="parent"
    android:layout_marginBottom="@dimen/dimen_sixteen_dp"
    android:text="@string/attendance_save_btn"
    android:foreground="?android:attr/selectableItemBackground"
    android:focusable="true"
    android:textColor="@android:color/white"
    android:elevation="@dimen/dimen_six_dp"
    android:background="@drawable/add_btn_background_yellow"
    />

</android.support.constraint.ConstraintLayout>