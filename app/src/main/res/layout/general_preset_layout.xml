<?xml version="1.0" encoding="utf-8"?>

<layout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools">

  <data>
    <variable
      name="subjectmodel"
      type="com.nloops.students.utils.SubjectModel"/>
  </data>
  <ViewSwitcher
    android:id="@+id/view_switcher"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:inAnimation="@anim/slide_in_right"
    android:outAnimation="@anim/slide_out_left"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    >
    <FrameLayout
      android:id="@+id/content"
      android:layout_width="match_parent"
      android:layout_height="wrap_content">
      <android.support.constraint.ConstraintLayout
        android:id="@+id/main_container"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_fourtwenty_dp"
        android:paddingBottom="@dimen/dimen_five_dp">

        <TextView
          android:id="@+id/tv_preset_name"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="@dimen/dimen_eight_dp"
          android:layout_marginStart="@dimen/dimen_twentyfour_dp"
          android:text="@{subjectmodel.subjectName}"
          android:textColor="@color/blue_grey_700"
          android:textSize="16sp"
          app:layout_constraintLeft_toLeftOf="parent"
          app:layout_constraintTop_toTopOf="parent"
          tools:text="Intro to Java"
          />

        <include
          android:id="@+id/date_holder"
          layout="@layout/preset_date_layout"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          app:layout_constraintLeft_toLeftOf="parent"
          app:layout_constraintTop_toBottomOf="@id/tv_preset_name"
          />

        <include
          android:id="@+id/time_holder"
          layout="@layout/preset_time_layout"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="@dimen/dimen_sixteen_dp"
          app:layout_constraintLeft_toLeftOf="@id/date_holder"
          app:layout_constraintTop_toBottomOf="@id/date_holder"
          />

        <FrameLayout
          android:id="@+id/btn_confirm"
          android:layout_width="0dp"
          android:layout_height="0dp"
          android:layout_marginTop="@dimen/dimen_sixteen_dp"
          android:layout_marginBottom="0dp"
          android:layout_marginStart="0dp"
          android:background="@color/colorAccent"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintLeft_toLeftOf="@+id/guideline"
          app:layout_constraintRight_toRightOf="parent"
          app:layout_constraintTop_toBottomOf="@id/time_holder">

          <TextView
            android:id="@+id/txt_action"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/btn_preset_okay"
            android:textColor="@android:color/white"
            android:textSize="38sp"
            />

        </FrameLayout>

        <TextView
          android:id="@+id/txt_date_label"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginStart="@dimen/dimen_twentyfour_dp"
          android:text="@string/string_label_date"
          android:textColor="@color/blue_grey_700"
          android:textSize="16sp"
          app:layout_constraintBottom_toTopOf="@id/txt_time_label"
          app:layout_constraintLeft_toLeftOf="parent"
          app:layout_constraintTop_toTopOf="@id/btn_confirm"
          />

        <TextView
          android:id="@+id/txt_time_label"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="@string/string_label_time"
          android:textColor="@color/blue_grey_700"
          android:textSize="16sp"
          app:layout_constraintBottom_toBottomOf="@id/btn_confirm"
          app:layout_constraintLeft_toLeftOf="@id/txt_date_label"
          />

        <android.support.constraint.Guideline
          android:id="@+id/guideline"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:orientation="vertical"
          app:layout_constraintGuide_percent="0.55"
          />

      </android.support.constraint.ConstraintLayout>
    </FrameLayout>

    <FrameLayout
      android:id="@+id/iv_holder"
      android:layout_width="match_parent"
      android:layout_height="match_parent">
      <ImageView
        android:id="@+id/iv_preset_finish"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:src="@drawable/circle_avd"
        android:layout_gravity="center"
        android:visibility="invisible"
        />
    </FrameLayout>
  </ViewSwitcher>
</layout>