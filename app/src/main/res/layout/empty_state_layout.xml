<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:id="@+id/subject_rv_empty_state"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:visibility="gone"
  tools:visibility="visible"
  >
  <ImageView
    android:id="@+id/iv_subject_state"
    android:layout_width="250dp"
    android:layout_height="250dp"
    android:layout_centerInParent="true"
    android:contentDescription="@string/empty_state_content_description"
    android:src="@drawable/ic_empty_state"
    />
  <TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dimen_twentyfour_dp"
    android:layout_below="@id/iv_subject_state"
    android:layout_centerHorizontal="true"
    android:gravity="center"
    android:text="@string/empty_state_text_view"
    />
</RelativeLayout>
