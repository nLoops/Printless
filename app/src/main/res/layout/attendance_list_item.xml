<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:padding="@dimen/dimen_five_dp"
  >

  <TextView
    android:id="@+id/tv_att_student_name"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:ellipsize="end"
    android:maxLines="1"
    android:textSize="@dimen/text_general_size"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintRight_toLeftOf="@id/cb_att_student"
    tools:text="Ahmed Ibrahim"/>

  <CheckBox
    android:id="@+id/cb_att_student"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toBottomOf="@id/tv_att_student_name"
    app:layout_constraintBottom_toTopOf="@id/tv_att_student_name"
    />

  <TextView
    android:id="@+id/tv_att_student_uid"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_constraintTop_toBottomOf="@id/tv_att_student_name"
    app:layout_constraintLeft_toLeftOf="@id/tv_att_student_name"
    app:layout_constraintRight_toRightOf="parent"
    tools:text="340-90"
    android:textSize="@dimen/text_body_size"
    />

</android.support.constraint.ConstraintLayout>