<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  xmlns:tools="http://schemas.android.com/tools"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:padding="@dimen/dimen_eight_dp">

  <TextView
    android:id="@+id/report_list_student_name"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:text="Ahmed Ibrahim"
    android:textSize="@dimen/text_general_size"
    android:textColor="@color/colorTextView"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintTop_toTopOf="parent"/>

  <TextView
    android:id="@+id/report_list_student_uid"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:text="450-709"
    android:textSize="@dimen/text_body_size"
    android:textColor="@color/colorToolbarText"
    app:layout_constraintTop_toBottomOf="@id/report_list_student_name"
    app:layout_constraintLeft_toLeftOf="@id/report_list_student_name"/>

  <TextView
    android:id="@+id/report_list_student_absentee_count"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:text="Number of Absenteeism (1)"
    android:textSize="@dimen/text_body_size"
    android:textColor="@color/colorToolbarText"
    app:layout_constraintTop_toBottomOf="@id/report_list_student_uid"
    app:layout_constraintLeft_toLeftOf="@id/report_list_student_uid"/>

  <TextView
    android:id="@+id/report_list_student_absentee_percentage"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:text="Percentage of Absenteeism (3%)"
    android:textSize="@dimen/text_body_size"
    android:textColor="@color/colorToolbarText"
    app:layout_constraintTop_toBottomOf="@id/report_list_student_absentee_count"
    app:layout_constraintLeft_toLeftOf="@id/report_list_student_absentee_count"/>

  <View
    android:layout_width="match_parent"
    android:layout_height="2dp"
    android:layout_marginStart="@dimen/dimen_eight_dp"
    android:layout_marginEnd="@dimen/dimen_eight_dp"
    android:background="@color/colorRecyclerSeparator"
    app:layout_constraintLeft_toLeftOf="@id/report_list_student_name"
    app:layout_constraintRight_toRightOf="parent"
    android:layout_marginTop="@dimen/dimen_five_dp"
    app:layout_constraintTop_toBottomOf="@id/report_list_student_absentee_percentage"
    />

</android.support.constraint.ConstraintLayout>