<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  xmlns:tools="http://schemas.android.com/tools"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_marginTop="@dimen/dimen_four_dp"
  >

  <TextView
    android:id="@+id/report_list_subject_name"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:text="Basics Of Math"
    style="@style/MainTextStyle"
    android:textColor="@color/colorReportText"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintTop_toTopOf="parent"/>

  <TextView
    android:id="@+id/report_list_student_count"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:text="Total Students (91)"
    style="@style/SecondryTextStyle"
    app:layout_constraintTop_toBottomOf="@id/report_list_subject_name"
    app:layout_constraintLeft_toLeftOf="@id/report_list_subject_name"/>

  <TextView
    android:id="@+id/report_list_absentee_count"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:text="Number of Absenteeism (16)"
    style="@style/SecondryTextStyle"
    android:layout_marginTop="@dimen/dimen_eight_dp"
    app:layout_constraintTop_toBottomOf="@id/report_list_student_count"
    app:layout_constraintLeft_toLeftOf="@id/report_list_student_count"/>

  <View
    android:layout_width="match_parent"
    android:layout_height="2dp"
    style="@style/lineMargin"
    android:background="@color/colorRecyclerSeparator"
    app:layout_constraintLeft_toLeftOf="@id/report_list_subject_name"
    app:layout_constraintRight_toRightOf="parent"
    android:layout_marginTop="@dimen/dimen_five_dp"
    app:layout_constraintTop_toBottomOf="@id/report_list_absentee_count"
    />

</android.support.constraint.ConstraintLayout>