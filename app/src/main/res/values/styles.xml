<resources>

  <!-- Base application theme. -->
  <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
    <!-- Customize your theme here. -->
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>
    <item name="android:windowLightStatusBar">true</item>
  </style>


  <style name="settingsTVstyle">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">40dp</item>
    <item name="android:layout_marginTop">@dimen/dimen_twentyfour_dp</item>
    <item name="android:foreground">?android:attr/selectableItemBackground</item>
    <item name="android:textSize">@dimen/text_body_size</item>
    <item name="android:layout_marginStart">@dimen/dimen_two_dp</item>
    <item name="android:clickable">true</item>
    <item name="android:focusable">true</item>
    <item name="android:gravity">center|start</item>
  </style>

  <style name="Widget"/>

  <style name="Widget.Label">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:textColor">@color/blue_grey_400</item>
    <item name="android:fontFamily">sans-serif-medium</item>
  </style>

  <style name="Widget.DateTime">
    <item name="android:minWidth">75dp</item>
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:background">@drawable/bg_square_date</item>
    <item name="android:textColor">@color/csl_date</item>
    <item name="android:gravity">center</item>
    <item name="android:padding">@dimen/dimen_eight_dp</item>
  </style>

  <style name="TextInputStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_marginStart">@dimen/dimen_twentyfour_dp</item>
    <item name="android:layout_marginEnd">@dimen/dimen_twentyfour_dp</item>
  </style>


</resources>
